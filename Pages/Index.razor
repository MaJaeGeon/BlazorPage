@page "/"
@using Excubo.Blazor.TreeViews

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.


@if (Contents == null) {
    <p><em>Loading...</em></p>
} else {
    <table>
        <tbody>
            <TreeView Items="@Contents.Children" GetChildren="(item) => item.Children">
                <ItemTemplate>
                    <tr>
                        <td>@context.Item.Name</td>
                    </tr>
                </ItemTemplate>
            </TreeView>
        </tbody>
    </table>
}